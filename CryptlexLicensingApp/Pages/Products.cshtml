@page
@model CryptlexLicensingApp.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>
<p>
    <a id="addButton" class="btn btn-success">Add Product</a>
</p>

@if (Model.ProductResponses?.Count > 0)
{
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Display name</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductResponses)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.DisplayName</td>
                    <td>$@product.Description</td>
                    <td>
                        <a class="btn btn-info btn-sm">Details</a>
                        <a class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}

<div>
    <!-- The Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Product</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="userForm">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="totalLicence">Total Licenses:</label>
                            <input type="text" id="totalLicence" name="totalLicence" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="totalTrialActivation">Total Trial Activations:</label>
                            <input type="text" id="totalTrialActivation" name="totalTrialActivation" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="totalProductVersion">Total Product Versions:</label>
                            <input type="text" id="totalProductVersion" name="totalProductVersion" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="createDate">Creation Date:</label>
                            <input type="date" id="createDate" name="createDate" class="form-control" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="closeButton" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" id="createButton" class="btn btn-success">Create</button>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    document.getElementById('addButton').onclick = function () {
        $('#myModal').modal('show');
    };

    document.getElementById('closeButton').onclick = function () {
        $('#myModal').modal('hide');
    };
</script>
