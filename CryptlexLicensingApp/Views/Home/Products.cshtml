<script>
    document.getElementById('addButton').onclick = function () {
        // Use Bootstrap's method to show the modal
        $('#myModal').modal('show');
    };

        document.getElementById('closeButton').onclick = function () {
            // Use Bootstrap's method to show the modal
            $('#myModal').modal('hide');
        };

    document.getElementById('createButton').onclick = function () {
        var name = document.getElementById('name').value;
        var totalLicence = document.getElementById('totalLicence').value;
        var totalTrialActivation = document.getElementById('totalTrialActivation').value;
        var totalProductVersion = document.getElementById('totalProductVersion').value;
        var createDate = document.getElementById('createDate').value;

        console.log('Creating:', name, totalLicence, totalTrialActivation, totalProductVersion, createDate);

        // Use Bootstrap's method to hide the modal
        $('#myModal').modal('hide');

        // Optionally, reset the form or perform other actions.
    };

    // Close the modal if the user clicks outside of it
    window.onclick = function (event) {
        if (event.target === document.getElementById('myModal')) {
            $('#myModal').modal('hide');
        }
    };
</script>